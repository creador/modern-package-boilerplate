{
  "name": "modern-package-boilerplate",
  "version": "1.0.10",
  "description": "Boilerplate for creating modern npm packages. Features: webpack2, babel, mocha, chai, sinon, istanbul, eslint, CI with travis-ci.org, coverage reports with coveralls.io",
  "keywords": [],
  "license": "MIT",
  "author": "Eugene Nikitin",
  "homepage": "http://github.com/eunikitin/modern-package-boilerplate.git",
  "repository": {
    "type": "git",
    "url": "http://github.com/eunikitin/modern-package-boilerplate.git"
  },
  "bugs": {
    "mail": "eu.nikitin@gmail.com",
    "url": "http://github.com/eunikitin/modern-package-boilerplate/issues"
  },
  "main": "lib/index.min.js",
  "scripts": {
    "clean": "rimraf ./.nyc_output ./.tmp ./coverage ./lib",
    "dev": "cross-env NODE_ENV=development rollup -c -o lib/index.js",
    "build": "cross-env NODE_ENV=production rollup -c -o lib/index.js",
    "cover": "nyc --reporter=lcov --reporter=text npm run test",
    "coveralls": "nyc --reporter=lcov --reporter=text npm run test && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src test",
    "prepublish": "npm run clean && npm run lint && npm run build"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.26.0",
    "chai": "4.1.2",
    "coveralls": "2.13.3",
    "cross-env": "^5.1.4",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.1.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.7.0",
    "fs-file-tree": "1.0.6",
    "istanbul-instrumenter-loader": "2.0.0",
    "mocha": "3.4.2",
    "nyc": "11.0.1",
    "rimraf": "2.6.1",
    "rollup": "^0.58.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "sinon": "2.3.2"
  }
}
