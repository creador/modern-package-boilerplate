{
  "name": "modern-package-boilerplate",
  "version": "2.3.4",
  "description": "Powerfull, flexible and easy-to-use boilerplate for creating modern npm packages. Features: rollup, babel, react (optional), flow (optional), jest, enzyme, eslint, travis-ci, coveralls, renovate",
  "keywords": [
    "npm-package",
    "package",
    "npm",
    "boilerplate",
    "rollup",
    "babel",
    "react",
    "flow",
    "jest",
    "enzyme",
    "eslint",
    "travis",
    "travis-ci",
    "coveralls",
    "renovate"
  ],
  "license": "MIT",
  "author": "Eugene Nikitin",
  "homepage": "http://github.com/eunikitin/modern-package-boilerplate.git",
  "repository": {
    "type": "git",
    "url": "http://github.com/eunikitin/modern-package-boilerplate.git"
  },
  "bugs": {
    "mail": "eu.nikitin@gmail.com",
    "url": "http://github.com/eunikitin/modern-package-boilerplate/issues"
  },
  "main": "lib/index.js",
  "scripts": {
    "gulp": "gulp --gulpfile ./builder/configs/gulpfile.babel.js --require @babel/register --cwd ./",
    "clean": "npm run gulp clean",
    "dev": "npm run gulp build:dev",
    "build": "npm run gulp build:prod",
    "test": "npm run gulp test",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cover": "npm run gulp cover",
    "coveralls": "npm run test:cover && cat ./coverage/lcov.info | coveralls",
    "flow": "npm run gulp flow",
    "flow-typed": "npm run gulp flow-typed",
    "lint": "npm run gulp lint",
    "prepublish": "npm run clean && npm run test && npm run flow && npm run lint && npm run build"
  },
  "peerDependencies": {
    "react": "^15 || ^16",
    "react-dom": "^15 || ^16"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@types/browser-sync": "0.0.42",
    "@types/jest": "^24.0.6",
    "@types/jest-cli": "^23.6.0",
    "@types/uniqid": "^4.1.2",
    "babel-eslint": "10.0.1",
    "babel-plugin-module-resolver": "^3.1.3",
    "browser-sync": "2.26.3",
    "colors": "^1.3.3",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "dayjs": "^1.8.5",
    "deepmerge": "^3.1.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "7.12.4",
    "flow-bin": "^0.92.1",
    "flow-typed": "2.5.1",
    "fs-file-tree": "1.0.7",
    "gulp": "4.0.0",
    "gulp-eslint": "5.0.0",
    "gulp-jest": "^4.0.2",
    "gulp-run": "1.7.1",
    "jest": "^24.1.0",
    "jest-cli": "^24.1.0",
    "merge-deep": "3.0.2",
    "node-cmd": "^3.0.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "recursive-readdir": "^2.2.2",
    "rimraf": "2.6.3",
    "rollup": "1.1.2",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-progress": "^1.0.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.13.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-immutable": "^5.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3",
    "undertaker": "^1.2.0",
    "uniqid": "^5.0.3",
    "winston": "^3.2.1",
    "yargs": "^13.2.1"
  }
}
