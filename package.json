{
  "name": "modern-package-boilerplate",
  "version": "2.0.1",
  "description": "Powerfull, flexible and easy-to-use boilerplate for creating npm packages. Features: rollup, babel, react (optional), flow, jest, enzyme, eslint. CI with travis-ci.org, coverage reports with coveralls.io, dependency tracking with renovateapp",
  "keywords": [],
  "license": "MIT",
  "author": "Eugene Nikitin",
  "homepage": "http://github.com/eunikitin/modern-package-boilerplate.git",
  "repository": {
    "type": "git",
    "url": "http://github.com/eunikitin/modern-package-boilerplate.git"
  },
  "bugs": {
    "mail": "eu.nikitin@gmail.com",
    "url": "http://github.com/eunikitin/modern-package-boilerplate/issues"
  },
  "main": "lib/index.min.js",
  "scripts": {
    "clean": "rimraf ./.nyc_output ./.tmp ./coverage ./lib",
    "dev": "cross-env NODE_ENV=development rollup -c -o lib/index.js",
    "build": "cross-env NODE_ENV=production rollup -c -o lib/index.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cover": "cross-env NODE_ENV=test jest --coverage",
    "coveralls": "npm run test:cover && cat ./coverage/lcov.info | coveralls",
    "lint": "echo lint is disabled",
    "prepublish": "npm run clean && npm run build"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "peerDependencies": {
    "react": "^15 || ^16",
    "react-dom": "^15 || ^16"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.3",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.6.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.26.0",
    "coveralls": "2.13.3",
    "cross-env": "5.1.4",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.1.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.7.0",
    "fs-file-tree": "1.0.6",
    "jest": "22.4.3",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "rimraf": "2.6.2",
    "rollup": "0.58.1",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-commonjs": "9.1.0",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-uglify": "3.0.0"
  }
}
