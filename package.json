{
  "name": "modern-package-boilerplate",
  "version": "1.0.9",
  "description": "Boilerplate for creating modern npm packages. Features: webpack2, babel, mocha, chai, sinon, istanbul, eslint, CI with travis-ci.org, coverage reports with coveralls.io",
  "keywords": [],
  "license": "MIT",
  "author": "Eugene Nikitin",
  "homepage": "http://github.com/eunikitin/modern-package-boilerplate.git",
  "repository": {
    "type": "git",
    "url": "http://github.com/eunikitin/modern-package-boilerplate.git"
  },
  "bugs": {
    "mail": "eu.nikitin@gmail.com",
    "url": "http://github.com/eunikitin/modern-package-boilerplate/issues"
  },
  "main": "lib/index.min.js",
  "scripts": {
    "clean": "rimraf ./.nyc_output ./.tmp ./coverage ./lib",
    "dev": "node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.build.development.js",
    "build": "node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.build.production.js",
    "test": "mocha-webpack --webpack-config webpack.config.test.js \"test/runner.js\"",
    "test:watch": "mocha-webpack --webpack-config webpack.config.test.js \"test/runner.js\" --watch",
    "cover": "nyc --reporter=lcov --reporter=text npm run test",
    "coveralls": "nyc --reporter=lcov --reporter=text npm run test && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src test",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.4",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.26.0",
    "chai": "4.1.2",
    "coveralls": "2.13.3",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.1.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.7.0",
    "fs-file-tree": "1.0.6",
    "istanbul-instrumenter-loader": "2.0.0",
    "mocha": "3.4.2",
    "mocha-webpack": "0.7.0",
    "nyc": "11.0.1",
    "rimraf": "2.6.1",
    "sinon": "2.3.2",
    "webpack": "2.6.1",
    "webpack-merge": "4.1.0",
    "webpack-node-externals": "1.6.0",
    "webpack-uglify-js-plugin": "1.1.9"
  }
}
